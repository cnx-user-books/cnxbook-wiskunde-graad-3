        <list id="id7593563" list-type="bulleted">
          <item>Kom ons sit nou weer die getalle aanmekaar:</item>
        </list>
        <para id="id4425450">30 + 10 + 1 = 40 + 1 =  41</para>
        <para id="id8861890">20 + 10 + 7 = _____ + _____ = _____</para>
